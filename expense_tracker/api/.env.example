# Flask Environment Configuration
FLASK_ENV=development

# Database Configuration - PostgreSQL (Alembic-managed)
# Default credentials below; change username/password for security
DATABASE_URL=postgresql://tracker_user:tracker_password@localhost:5432/expense_tracker

# Flask Secret Key
SECRET_KEY=your-secret-key-here-change-in-production

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# SMTP Email Configuration (Optional for email verification)
# Leave empty to use fallback demo mode (prints link instead of sending email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=
